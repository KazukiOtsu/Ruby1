<div class="container">
    <div class="PageTitle">
        <h3>予定一覧</h3>
        <%= link_to "新規作成", :new_post, class: 'btn'%>
    </div>

<% if flash[:notice]%>
    <p class="notice"><%= flash[:notice]%></p>
<% end %>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>タイトル</th>
                <th>開始日</th>
                <th>終了日</th>
                <th>終日</th>
                <th>更新日時</th>
            </tr>
        <thead>

        <tbody>
            <% @posts.each do |post| %>
                <tr>
                    <td><%= post.id%></td>
                    <td><%= post.title%></td>
                    <td><%= post.start_at.strftime('%Y/%m/%d')%></td>
                    <td><%= post.end_at.strftime('%Y/%m/%d')%></td>
                    <td>
                    <% if post.all_day == true%>
                        ◯
                    <% else post.all_day == false%>
                       
                    <% end %>
                    </td>
                    <td><%= post.updated_at.to_s(:datetime_jp)%></td>
                    <td>
                        <%= link_to "詳細", post %>
                    </td>
                    <td>
                        <%= link_to "編集", [:edit,post]%>
                    </td>
                    <td>
                        <%= link_to "削除", post, method: :delete, data: { confirm:"本当に削除しますか？" } %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>

    <div class='BottomContainer'> 
        <p>現在の予定の合計数：<%= @all_posts %></p>
        <p>本日の日付：<%= Date.current.strftime('%Y/%m/%d') %></p>
    </div>
</div>            
