<%= link_to "スケジュール一覧へ戻る", :posts%>
<div class="PageTitle">
    <h3>予定の新規作成</h3>
</div>

<% if flash[:notice]%>
    <p class="notice"><%= flash[:notice]%></p>
<% end %>

<%= render 'shared/error', obj:@post %>

<%= form_with model: @post do |f| %>
    <table>
        <tr>
            <th><%= f.label :title ,"タイトル"%></th>
            <td><%= f.text_field :title%></td>
        </tr>
        <tr>
            <th><%= f.label :start_at ,"開始日"%></th>
            <td><%= f.date_field :start_at%></td>
        </tr>
        <tr>
            <th><%= f.label :end_at ,"終了日"%></th>
            <td><%= f.date_field :end_at%></td>
        </tr>
        <tr>
            <th><%= f.label :all_day ,"終日"%></th>
            <td><%= f.check_box :all_day%></td>
        </tr>
        <tr>
            <th><%= f.label :memo , "スケジュールメモ"%></th>
            <td><%= f.text_area :memo%>
        </tr>
    </table>

    <div>
        <ul>
            <li><%= f.submit "登録完了する"%></li>
        </ul>
    </div>
<% end %>